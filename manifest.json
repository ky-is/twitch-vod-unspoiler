{
  "manifest_version": 2,

  "name": "Twitch VOD Unspoiler",
  "description": "Enhances your twitch.tv VOD viewing experience",
  "version": "1.1",

  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "images/icon-off.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*", "*://twitch.tv/*"],
      "exclude_matches": ["*://player.twitch.tv/*"],
      "css": ["inject/unspoil.css"],
      "js": ["inject/util.js", "inject/sync.js", "inject/seek.js"]
    },
    {
      "matches": ["*://player.twitch.tv/*"],
      "css": ["inject/player.css"],
      "js": ["inject/util.js", "inject/sync.js", "inject/hotkeys.js", "inject/player.js"],
      "all_frames": true
    }
  ],
  "icons": {
    "128": "images/icon-on.png"
  },
  "permissions": [
    "activeTab"
  ]
}
