{
  "manifest_version": 2,

  "name": "Twitch VOD Unspoiler",
  "description": "Unspoils Twitch VODs by concealing video durations, providing relative-time seek controls and speed-change hotkeys.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "images/icon-on.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*", "*://twitch.tv/*"],
      "css": ["inject/unspoil.css"],
      "js": ["inject/util.js", "inject/unspoil.js", "inject/hotkeys.js"]
    }
  ],
  "icons": {
    "128": "images/icon-on.png"
  },
  "permissions": [
    "activeTab"
  ]
}
