{
	"manifest_version": 2,
	"name": "Twitch VOD Unspoiler",
	"description": "Removes spoilers from Twitch.tv VODs.",
	"version": "2.0.0",
	"background": {
		"persistent": false,
		"scripts": ["generated/background/index.js"]
	},
	"browser_action": {
		"default_icon": "images/icon-off.png"
	},
	"content_scripts": [
		{
			"matches": ["*://www.twitch.tv/*", "*://twitch.tv/*"],
			"css": ["generated/inject/index.css"],
			"js": [ "generated/inject/index.js"]
		}
	],
	"icons": {
		"128": "images/icon-on.png"
	},
	"permissions": [
		"activeTab"
	]
}
